{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es6",
    "module": "es6",
    // esm ㅎㅇ태의 d.ts만
    // d.ts 생성
    "declaration": true,
    "emitDeclarationOnly": true,
    // "declarationDir": ".",
    // "declarationMap": true,
    "outDir": "dist",
    // index.d.ts는 트랜스파일하지 않습니다.
    "strict": true,
    // "allowJs": true,
    "moduleResolution": "node16",
    "sourceMap": true,
    "lib": ["es6", "dom", "es2016", "es2017"],
    "esModuleInterop": true,
    // jest 세팅하면서 ture
    // test 하면서 추가
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "rootDir": "src"
  }
  // "include": ["index.ts"],
  // "exclude": [
  //   "*.config.js", // config파일들을 type생성 대상에서 제외
  //   "packages/**/node_modules/*.d.ts",
  //   "node_modules/*.d.ts",
  //   // "**/dist/**/*",
  //   "**/src/*.test.tsx"
  // ]
}
